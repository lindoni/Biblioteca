@model Usuario
  @{
      ViewData["Title"] = "Cadastro";
  }
<h1>Registre um usuário</h1>

<p>@ViewData["Mensagem"]</p>
<div class="row justify-content-md-center">

  <form id="frmCadastro" asp-controller="Usuario" asp-action="Cadastro" method="post">
 
    
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" class="form-control" required/>
        </div>
        <div>
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" required/>
        </div>
        <div class="form-group mb-2">
                <select name="Tipo" class="form-control">
                    <option value="admin">Administrador</option>
                    <option value="padrao">Padrão</option>
                </select>
        </div>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>

</div>
